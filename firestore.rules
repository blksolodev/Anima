rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is signed in
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users: Allow read for all auth users, write only for owner
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isAuthenticated() && isOwner(userId);
      allow delete: if false; // Users shouldn't be deleted via client normally
    }

    // Posts: Allow read for all auth users
    // Creating allowed if authorId matches
    match /posts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.authorId == request.auth.uid;
    }
    
    // Anime Library: Root collection using {userId}_{animeId} document IDs
    // Fields: u (userId), a (animeId), s (status), etc.
    match /anime_library/{docId} {
      // Allow read if the entry belongs to the authenticated user
      allow read: if isAuthenticated() && resource.data.u == request.auth.uid;
      
      // Allow create if the user claims the entry (u == auth.uid)
      allow create: if isAuthenticated() && request.resource.data.u == request.auth.uid;
      
      // Allow update/delete if the user owns the entry
      allow update, delete: if isAuthenticated() && resource.data.u == request.auth.uid;
    }
    
    // Notifications: Read own notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.targetUserId == request.auth.uid;
      allow write: if isAuthenticated(); // Should be backend, but allowing for demo
    }
    
    // Conversations: Participants can read/write
    match /conversations/{conversationId} {
      allow read: if isAuthenticated() && (request.auth.uid in resource.data.participantIds);
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (request.auth.uid in resource.data.participantIds);
      
      match /messages/{messageId} {
        allow read, write: if isAuthenticated();
      }
    }
  }
}